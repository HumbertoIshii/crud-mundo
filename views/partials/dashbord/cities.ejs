<div id="dashbord-city" class="card shadow rounded-4 p-4 mb-3">
    <h4 class="mb-3">Lista de Cidades</h4>

    <!-- Search + Filters -->
    <div class="row g-2 mb-3">
        <div class="col-md-5">
            <input type="text" class="form-control" placeholder="Pesquisar cidade..." />
        </div>
        <div class="col-md-3">
            <input type="text" class="form-control" placeholder="País ou Continente" />
        </div>
        <div class="col-md-3">
            <select class="form-select">
                <option>Ordenar por</option>
                <option>Nome</option>
                <option>População</option>
                <option>Latitude</option>
                <option>Longitude</option>
                <option>País</option>
                <option>Continente</option>
            </select>
        </div>
        <div class="col-md-2">
            <button class="btn btn-primary w-100" data-bs-toggle="modal" data-bs-target="#modalAddCity">Buscar</button>
        </div>
    </div>

    <!-- Table -->
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Cidade</th>
                <th>País</th>
                <th>Continente</th>
            </tr>
        </thead>
        <tbody>
            <tr data-bs-toggle="modal" data-bs-target="#modalSaoPaulo">
                <td>São Paulo</td>
                <td>Brasil</td>
                <td>América do Sul</td>
            </tr>

            <tr data-bs-toggle="modal" data-bs-target="#modalToquio">
                <td>Tóquio</td>
                <td>Japão</td>
                <td>Ásia</td>
            </tr>

            <tr data-bs-toggle="modal" data-bs-target="#modalParis">
                <td>Paris</td>
                <td>França</td>
                <td>Europa</td>
            </tr>
        </tbody>
    </table>

    <!-- Pagination -->
    <nav>
        <ul class="pagination justify-content-center">
            <li class="page-item">
                <a class="page-link text-secondary" href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            <li class="page-item"><a class="page-link text-secondary" href="#">1</a></li>
            <li class="page-item"><a class="page-link text-secondary" href="#">2</a></li>
            <li class="page-item"><a class="page-link text-secondary" href="#">3</a></li>
            <li class="page-item">
                <a class="page-link text-secondary" href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
</div>

