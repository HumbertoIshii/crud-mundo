<div id="dashbord-continent" class="card shadow rounded-4 p-4 mb-3"> 
    <h4 class="mb-3">Lista de Continentes</h4>
    <!-- Table -->
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Continente</th>
            </tr>
        </thead>
        <tbody>
            <% if (continents && continents.length > 0) { %>
                <% continents.forEach(cont => { %>
                    <tr 
                        data-bs-toggle="modal" 
                        data-bs-target="#modal-cont-<%= cont.id %>" 
                        style="cursor:pointer"
                    >
                        <td><%= cont.nome %></td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="1" class="text-center text-muted">Nenhum continente encontrado.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>

<!-- Dynamic Modals -->
<% if (continents && continents.length > 0) { %>
    <% continents.forEach(cont => { %>
        <div class="modal fade" id="modal-cont-<%= cont.id %>" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title"><%= cont.nome %></h5>
                        <button class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <p><%= cont.descricao %></p>
                    </div>
                </div>
            </div>
        </div>
    <% }) %>
<% } %>