<div id="admin-continent" class="card shadow rounded-4 p-4 mb-3">
    <h4 class="mb-3">Gerenciar Continentes</h4>

    <!-- Controls -->
    <div class="row g-2 mb-3">
        <div class="col-md-7">
            <input type="text" class="form-control" placeholder="Pesquisar continente..." />
        </div>

        <div class="col-md-3">
            <select class="form-select">
                <option>Ordenar por</option>
                <option>Nome</option>
                <option>Quantidade de países</option>
            </select>
        </div>

        <div class="col-md-2">
            <button class="btn btn-primary w-100" data-bs-toggle="modal" data-bs-target="#modalAddContinent">
                <i class="fas fa-plus me-2"></i>Adicionar
            </button>
        </div>
    </div>

    <!-- Table -->
    <table class="table table-hover align-middle">
        <thead>
            <tr>
                <th>Continente</th>
                <th class="text-end">Excluir</th>
            </tr>
        </thead>

        <tbody>
            <!-- África -->
            <tr data-bs-toggle="modal" data-bs-target="#modalEditAfrica" style="cursor: pointer;">
                <td>África</td>
                <td class="text-end">
                    <button class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#modalDeleteAfrica" onclick="event.stopPropagation()">
                        <i class="fas fa-times"></i>
                    </button>
                </td>
            </tr>

            <!-- Europa -->
            <tr data-bs-toggle="modal" data-bs-target="#modalEditEuropa" style="cursor: pointer;">
                <td>Europa</td>
                <td class="text-end">
                    <button class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#modalDeleteEuropa" onclick="event.stopPropagation()">
                        <i class="fas fa-times"></i>
                    </button>
                </td>
            </tr>

            <!-- Ásia -->
            <tr data-bs-toggle="modal" data-bs-target="#modalEditAsia" style="cursor: pointer;">
                <td>Ásia</td>
                <td class="text-end">
                    <button class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#modalDeleteAsia" onclick="event.stopPropagation()">
                        <i class="fas fa-times"></i>
                    </button>
                </td>
            </tr>
        </tbody>
    </table>

    <!-- Pagination -->
    <nav>
        <ul class="pagination justify-content-center">
            <li class="page-item">
                <a class="page-link text-secondary" href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            <li class="page-item"><a class="page-link text-secondary" href="#">1</a></li>
            <li class="page-item"><a class="page-link text-secondary" href="#">2</a></li>
            <li class="page-item"><a class="page-link text-secondary" href="#">3</a></li>
            <li class="page-item">
                <a class="page-link text-secondary" href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
</div>


<!-- ============================== -->
<!-- Modal: Adicionar Continente    -->
<!-- ============================== -->
<div class="modal fade" id="modalAddContinent" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Adicionar Continente</h5>
                <button class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <label class="form-label">Nome</label>
                <input type="text" class="form-control mb-3">

                <label class="form-label">Descrição</label>
                <textarea class="form-control mb-3"></textarea>

                <button class="btn btn-success w-100">Adicionar</button>
            </div>

        </div>
    </div>
</div>


