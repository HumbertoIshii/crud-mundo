<div id="admin-country" class="card shadow rounded-4 p-4 mb-3">
    <h4 class="mb-3">Gerenciar Países</h4>

    <!-- Filtros Países -->
    <form method="GET" class="row g-2 mb-3">
        <div class="col-md-2">
            <button type="button" class="btn btn-primary w-100" data-bs-toggle="modal" data-bs-target="#modalAddCountry">
                <i class="fas fa-plus me-2"></i>Adicionar
            </button>
        </div>
        <div class="col-md-4">
            <input type="text" name="search" value="<%= search || '' %>" class="form-control" placeholder="Pesquisar país..." />
        </div>
        <div class="col-md-3">
            <select class="form-select" name="continent">
                <option value="">Todos os continentes</option>
                <% (continents || []).forEach(c => { %>
                    <option value="<%= c.id %>" <%= c.id == (continentSelected || '') ? 'selected' : '' %>><%= c.nome %></option>
                <% }) %>
            </select>
        </div>
        <div class="col-md-2">
            <select class="form-select" name="orderBy">
                <option value="nome" <%= orderBy === "nome" ? "selected" : "" %>>Nome</option>
                <option value="populacao" <%= orderBy === "populacao" ? "selected" : "" %>>População</option>
                <option value="idioma" <%= orderBy === "idioma" ? "selected" : "" %>>Idioma</option>
                <option value="moeda" <%= orderBy === "moeda" ? "selected" : "" %>>Moeda</option>
                <option value="continente" <%= orderBy === "continente" ? "selected" : "" %>>Continente</option>
            </select>
        </div>
        <div class="col-md-1">
            <button class="btn btn-primary w-100">Buscar</button>
        </div>

        <input type="hidden" name="cityPage" value="<%= cityCurrentPage || 1 %>">
        <input type="hidden" name="citySearch" value="<%= citySearch || '' %>">
        <input type="hidden" name="cityCountryContinent" value="<%= cityCountryContinent || '' %>">
        <input type="hidden" name="cityOrderBy" value="<%= cityOrderBy || '' %>">
    </form>

    <!-- Tabela Países -->
    <table class="table table-hover align-middle">
        <thead>
            <tr>
                <th>País</th>
                <th>Continente</th>
                <th class="text-end">Excluir</th>
            </tr>
        </thead>
        <tbody>
            <% if (!countries || countries.length === 0) { %>
                <tr>
                    <td colspan="3" class="text-center text-muted">Nenhum país encontrado.</td>
                </tr>
            <% } else { %>
                <% countries.forEach(p => { %>
                    <tr data-bs-toggle="modal" data-bs-target="#modalEditCountry-<%= p.id %>" style="cursor:pointer;">
                        <td><%= p.nome %></td>
                        <td><%= p.continente %></td>
                        <td class="text-end">
                            <button class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#modalDeleteCountry-<%= p.id %>" onclick="event.stopPropagation()">
                                <i class="fas fa-times"></i>
                            </button>
                        </td>
                    </tr>
                <% }) %>
            <% } %>
        </tbody>
    </table>

    <!-- Paginação Países -->
    <nav>
        <ul class="pagination justify-content-center">
            <% if (currentPage > 1) { %>
                <li class="page-item">
                    <a class="page-link text-secondary" href="?countryPage=<%= currentPage - 1 %>&search=<%= search || '' %>&continent=<%= continentSelected || '' %>&orderBy=<%= orderBy || '' %>&cityPage=<%= cityCurrentPage || 1 %>&citySearch=<%= citySearch || '' %>&cityCountryContinent=<%= cityCountryContinent || '' %>&cityOrderBy=<%= cityOrderBy || '' %>">&laquo;</a>
                </li>
            <% } %>
            <% for (let i = 1; i <= (totalPages || 1); i++) { %>
                <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                    <a class="page-link" href="?countryPage=<%= i %>&search=<%= search || '' %>&continent=<%= continentSelected || '' %>&orderBy=<%= orderBy || '' %>&cityPage=<%= cityCurrentPage || 1 %>&citySearch=<%= citySearch || '' %>&cityCountryContinent=<%= cityCountryContinent || '' %>&cityOrderBy=<%= cityOrderBy || '' %>"><%= i %></a>
                </li>
            <% } %>
            <% if (currentPage < totalPages) { %>
                <li class="page-item">
                    <a class="page-link text-secondary" href="?countryPage=<%= currentPage + 1 %>&search=<%= search || '' %>&continent=<%= continentSelected || '' %>&orderBy=<%= orderBy || '' %>&cityPage=<%= cityCurrentPage || 1 %>&citySearch=<%= citySearch || '' %>&cityCountryContinent=<%= cityCountryContinent || '' %>&cityOrderBy=<%= cityOrderBy || '' %>">&raquo;</a>
                </li>
            <% } %>
        </ul>
    </nav>
</div>

<!-- Modal Adicionar País -->
<div class="modal fade" id="modalAddCountry" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="/geo/countries/create" method="POST">
                <div class="modal-header">
                    <h5 class="modal-title">Adicionar País</h5>
                    <button class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <div class="row g-2 mb-3">
                        <div class="col-8">
                            <input id="addCountryName" type="text" name="nome" class="form-control" placeholder="Nome do país" required>
                        </div>
                        <div class="col-4">
                            <button type="button" id="btnLookupCountry" class="btn btn-success w-100">Buscar</button>
                        </div>
                    </div>

                    <div class="row g-2 mb-3">
                        <div class="col-md-6">
                            <label class="form-label">População</label>
                            <input id="addPopulation" type="number" name="populacao" class="form-control" required>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Idioma Oficial</label>
                            <input id="addLanguage" type="text" name="idioma_oficial" class="form-control" required>
                        </div>
                    </div>

                    <div class="row g-2 mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Moeda</label>
                            <input id="addCurrency" type="text" name="moeda" class="form-control" required>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Continente</label>
                            <select class="form-select" name="continenteId" required>
                                <option value="" selected disabled>Selecione...</option>
                                <% (continents || []).forEach(c => { %>
                                    <option value="<%= c.id %>"><%= c.nome %></option>
                                <% }) %>
                            </select>
                        </div>
                    </div>

                    <input type="hidden" id="addSigla" name="sigla">
                    <input type="hidden" id="addBandeira" name="bandeira">

                    <div class="text-center mb-3">
                        <img id="addFlagImg" src="https://flagcdn.com/w320/un.png"
                            class="img-fluid rounded shadow-sm" style="max-width:120px;">
                    </div>

                    <button class="btn btn-success w-100">Adicionar</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modais Editar / Deletar de País -->
<% (countries || []).forEach(p => { %>

    <!-- Edit -->
    <div class="modal fade" id="modalEditCountry-<%= p.id %>" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Editar <%= p.nome %></h5>
                    <button class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form action="/geo/countries/edit/<%= p.id %>" method="POST">

                    <div class="modal-body">

                        <label class="form-label">Nome</label>
                        <input type="text" name="nome" class="form-control mb-3" value="<%= p.nome %>" required>

                        <div class="row g-2 mb-3">

                            <div class="col-md-6">
                                <label class="form-label">População</label>
                                <input type="number" name="populacao" class="form-control" value="<%= p.populacao %>" required>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Idioma Oficial</label>
                                <input type="text" name="idioma_oficial" class="form-control" value="<%= p.idioma_oficial %>" required>
                            </div>
                        </div>

                        <div class="row g-2 mb-3">

                            <div class="col-md-6">
                                <label class="form-label">Moeda</label>
                                <input type="text" name="moeda" class="form-control" value="<%= p.moeda %>" required>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Continente</label>
                                <select class="form-select" name="continenteId" required>
                                    <% continents.forEach(c => { %>
                                        <option value="<%= c.id %>" <%= c.id === p.continenteId ? "selected" : "" %>><%= c.nome %></option>
                                    <% }) %>
                                </select>
                            </div>
                        </div>

                        <input type="hidden" name="sigla" value="<%= p.sigla %>">
                        <input type="hidden" name="bandeira" value="<%= p.bandeira %>">

                        <div class="text-center mb-3">
                            <img src="<%= p.bandeira %>" class="img-fluid rounded shadow-sm" style="max-width:120px;">
                        </div>

                        <button class="btn btn-primary w-100">Salvar alterações</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Delete -->
    <div class="modal fade" id="modalDeleteCountry-<%= p.id %>" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-danger">Excluir <%= p.nome %></h5>
                    <button class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form action="/geo/countries/delete/<%= p.id %>" method="POST">
                    <div class="modal-body">
                        Tem certeza que deseja excluir o país <strong><%= p.nome %></strong>?
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-danger w-100">Confirmar exclusão</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
<% }) %>

<script src="/js/admin/countries.js"></script>