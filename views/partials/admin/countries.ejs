<div id="admin-country" class="card shadow rounded-4 p-4 mb-3">
    <h4 class="mb-3">Gerenciar Países</h4>

    <!-- Controls -->
    <div class="row g-2 mb-3">
        <div class="col-md-2">
            <button class="btn btn-primary w-100" data-bs-toggle="modal" data-bs-target="#modalAddCountry">
                <i class="fas fa-plus me-2"></i>Adicionar
            </button>
        </div>
        <div class="col-md-5">
            <input type="text" class="form-control" placeholder="Pesquisar país..." />
        </div>
        <div class="col-md-2">
            <input type="text" class="form-control" placeholder="Continente" />
        </div>
        <div class="col-md-2">
            <select class="form-select">
                <option>Ordenar por</option>
                <option>Nome</option>
                <option>População</option>
                <option>Idioma oficial</option>
                <option>Moeda</option>
                <option>Continente</option>
            </select>
        </div>
        <div class="col-md-1">
            <button class="btn btn-primary w-100" data-bs-toggle="modal" data-bs-target="#modalAddCountry">Buscar</button>
        </div>
    </div>

    <!-- Table -->
    <table class="table table-hover align-middle">
        <thead>
            <tr>
                <th>País</th>
                <th>Continente</th>
                <th class="text-end">Excluir</th>
            </tr>
        </thead>

        <tbody>
            <!-- Brasil -->
            <tr data-bs-toggle="modal" data-bs-target="#modalEditBrasil" style="cursor: pointer;">
                <td>Brasil</td>
                <td>América do Sul</td>
                <td class="text-end">
                    <button class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#modalDeleteBrasil"
                        onclick="event.stopPropagation()">
                        <i class="fas fa-times"></i>
                    </button>
                </td>
            </tr>

            <!-- Japão -->
            <tr data-bs-toggle="modal" data-bs-target="#modalEditJapao" style="cursor: pointer;">
                <td>Japão</td>
                <td>Ásia</td>
                <td class="text-end">
                    <button class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#modalDeleteJapao"
                        onclick="event.stopPropagation()">
                        <i class="fas fa-times"></i>
                    </button>
                </td>
            </tr>

            <!-- França -->
            <tr data-bs-toggle="modal" data-bs-target="#modalEditFranca" style="cursor: pointer;">
                <td>França</td>
                <td>Europa</td>
                <td class="text-end">
                    <button class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#modalDeleteFranca"
                        onclick="event.stopPropagation()">
                        <i class="fas fa-times"></i>
                    </button>
                </td>
            </tr>
        </tbody>
    </table>

    <!-- Pagination -->
    <nav>
        <ul class="pagination justify-content-center">
            <li class="page-item">
                <a class="page-link text-secondary" href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            <li class="page-item"><a class="page-link text-secondary" href="#">1</a></li>
            <li class="page-item"><a class="page-link text-secondary" href="#">2</a></li>
            <li class="page-item"><a class="page-link text-secondary" href="#">3</a></li>
            <li class="page-item">
                <a class="page-link text-secondary" href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
</div>


<!-- ============================== -->
<!-- Modal: Adicionar País          -->
<!-- ============================== -->
<div class="modal fade" id="modalAddCountry" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Adicionar País</h5>
                <button class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">

                <div class="row g-2 mb-3">
                    <div class="col-8">
                        <input type="text" class="form-control" placeholder="Nome do país">
                    </div>
                    <div class="col-4">
                        <button class="btn btn-success w-100">Buscar</button>
                    </div>
                </div>

                <!-- Linha: População + Idioma Oficial -->
                <div class="row g-2 mb-3">
                    <div class="col-md-6">
                        <label class="form-label">População</label>
                        <input type="number" class="form-control" placeholder="Ex: 213000000">
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Idioma Oficial</label>
                        <input type="text" class="form-control" placeholder="Ex: Português">
                    </div>
                </div>

                <!-- Linha: Moeda + Continente -->
                <div class="row g-2 mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Moeda</label>
                        <input type="text" class="form-control" placeholder="Ex: Real (BRL)">
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Continente</label>
                        <select class="form-select">
                            <option selected disabled>Selecione...</option>
                            <option>América</option>
                            <option>Europa</option>
                            <option>Ásia</option>
                            <option>África</option>
                            <option>Oceania</option>
                        </select>
                    </div>
                </div>

                <div class="text-center mb-3">
                    <img src="https://flagcdn.com/w320/un.png" alt="Bandeira do País"
                        class="img-fluid rounded shadow-sm" style="max-width: 120px;">
                </div>

                <button class="btn btn-success w-100">Adicionar</button>

            </div>
        </div>
    </div>
</div>


